
%h2
	.text-center Tu es étudiant à l'UCL ?
%h2 
	.text-center Fait corriger ton CV par des pro
.panel.panel-default
	.panel-body
		.form-horizontal
			= form_for @user do |f|
				= render 'error_messages', object: f.object
				.form-group
					= f.label :ton_cv, "TON CV", class: "col-md-3 control-label"
					.col-md-9
						= f.file_field :cv
				.form-group
					= f.label :mail, "MAIL", class: "col-md-3 control-label"
					.col-md-9
						= f.text_field :email, class: "form-control"
				.form-group
					= f.label :faculté, "FACULTÉ", class: "col-md-3 control-label"
					.col-md-9
						= f.text_field :faculty, class: "form-control"
				
				= f.submit "Envoyer pour faire corriger", class:"btn btn-primary btn-lg btn-block"